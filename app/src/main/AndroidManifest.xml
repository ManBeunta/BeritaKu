<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rara.beritaku">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Detail.DetailBiasa"
            android:label="Profil Saya"
            android:parentActivityName=".MenuDrawer.Profile" />
        <activity
            android:name=".Detail.DetailBerita"
            android:label="@string/title_activity_detail_berita"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MenuDrawer.Pendahuluan"
            android:label="Pemdahuluan"
            android:parentActivityName=".MenuDrawer.Pendahuluan" />
        <activity
            android:name=".MenuDrawer.About"
            android:label="About Aplication"
            android:parentActivityName=".MenuDrawer.About" />
        <activity
            android:name=".MenuDrawer.Profile"
            android:parentActivityName=".MainActivity" />


    </application>

</manifest>